generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  userId     String    @unique @default(cuid())
  email      String    @unique
  name       String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  verifiedAt DateTime?

  sessions           Session[]
  forms              Form[]
  verificationTokens VerificationToken[]

  @@index([createdAt, name])
}

model Participant {
  id            Int          @id @default(autoincrement())
  participantId String       @unique @default(cuid())
  email         String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  lastVisited   DateTime?
  completedAt   DateTime?
  formId        String
  form          Form         @relation(fields: [formId], references: [formId], onDelete: Cascade)
  formAnswers   FormAnswer[]

  @@index([email])
}

model Form {
  id              Int              @id @default(autoincrement())
  formId          String           @unique @default(cuid())
  title           String
  description     String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  publishedAt     DateTime?
  formSubmissions FormSubmission[]
  creatorId       String
  creator         User             @relation(fields: [creatorId], references: [userId])
  pages           Page[]
  pagesTotal      Int              @default(0)
  theme           FormTheme        @default(DARK)
  participants    Participant[]

  @@index([title, createdAt, creatorId, publishedAt])
}

model Page {
  id          Int          @id @default(autoincrement())
  title       String?
  pageId      String       @unique @default(cuid())
  formId      String
  form        Form         @relation(fields: [formId], references: [formId], onDelete: Cascade)
  pageNumber  Int
  pageFields  Json?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  formAnswers FormAnswer[]

  @@index([formId, createdAt])
}

model FormAnswer {
  id            Int         @id @default(autoincrement())
  pageId        String
  page          Page        @relation(fields: [pageId], references: [pageId])
  answer        String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  participant   Participant @relation(fields: [participantId], references: [participantId])
  participantId String

  @@index([pageId, participantId, createdAt])
}

model FormSubmission {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  form      Form     @relation(fields: [formId], references: [id])
  formId    Int

  @@index([createdAt, formId])
}

model Session {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [userId])
  token     String    @unique
  expiresAt DateTime
  expiredAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
}

model VerificationToken {
  id        String    @id @default(cuid())
  token     String    @unique
  expiresAt DateTime
  expiredAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [userId])
  userId    String

  @@index([userId])
}

enum FormFieldType {
  TEXTAREA
  SELECT
  RADIO
  CHECKBOX
  TEXT
  DATE
  NUMBER
  PARAGRAPH
  HEADER
  LINK
}

enum FormTheme {
  LIGHT
  DARK
}
