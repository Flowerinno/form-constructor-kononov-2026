generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                 @id @default(autoincrement())
  userId             String              @unique @default(cuid())
  email              String              @unique
  name               String?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  verifiedAt         DateTime?
  sessions           Session[]
  forms              Form[]
  verificationTokens VerificationToken[]

  @@index([createdAt, name])
}

model Participant {
  id              Int              @id @default(autoincrement())
  participantId   String           @unique @default(cuid())
  email           String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  lastVisited     DateTime?
  completedAt     DateTime?
  formId          String
  form            Form             @relation(fields: [formId], references: [formId], onDelete: Cascade)
  pageAnswers     PageAnswer[]
  fieldAnswers    FieldAnswer[]
  formSubmissions FormSubmission[]

  @@index([email, createdAt, formId, completedAt])
}

model Form {
  id                Int              @id @default(autoincrement())
  formId            String           @unique @default(cuid())
  title             String
  description       String?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  publishedAt       DateTime?
  formSubmissions   FormSubmission[]
  creatorId         String
  creator           User             @relation(fields: [creatorId], references: [userId], onDelete: Cascade)
  pages             Page[]
  pagesTotal        Int              @default(0)
  theme             FormTheme        @default(DARK)
  participants      Participant[]
  allowResubmission Boolean          @default(false)
  finalTitle        String?
  finalDescription  String?

  @@index([title, createdAt, creatorId, publishedAt])
}

model Page {
  id          Int          @id @default(autoincrement())
  title       String?
  pageId      String       @unique @default(cuid())
  formId      String
  form        Form         @relation(fields: [formId], references: [formId], onDelete: Cascade)
  pageNumber  Int
  pageFields  Json?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  pageAnswers PageAnswer[]

  @@index([formId, pageId, pageNumber, createdAt])
}

model PageAnswer {
  id               Int             @id @default(autoincrement())
  answerId         String          @unique @default(cuid())
  pageId           String?
  referencePageId  String          @default("") // when page is deleted so we can keep reference
  page             Page?           @relation(fields: [pageId], references: [pageId], onDelete: SetNull)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  participant      Participant     @relation(fields: [participantId], references: [participantId], onDelete: Cascade)
  participantId    String
  fieldAnswers     FieldAnswer[]
  formSubmission   FormSubmission? @relation(fields: [formSubmissionId], references: [id], onDelete: Cascade)
  formSubmissionId String?

  @@index([pageId, participantId, formSubmissionId, referencePageId, createdAt])
}

model FieldAnswer {
  id            Int           @id @default(autoincrement())
  fieldId       String
  type          FormFieldType
  answer        String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  participant   Participant   @relation(fields: [participantId], references: [participantId], onDelete: Cascade)
  participantId String
  pageAnswer    PageAnswer    @relation(fields: [pageAnswerId], references: [answerId], onDelete: Cascade)
  pageAnswerId  String

  @@index([fieldId, participantId, pageAnswerId, createdAt])
}

model FormSubmission {
  id            String       @id @default(cuid())
  submissionId  String       @unique @default(cuid())
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  form          Form         @relation(fields: [formId], references: [formId], onDelete: Cascade)
  formId        String
  participant   Participant  @relation(fields: [participantId], references: [participantId], onDelete: Cascade)
  participantId String
  pageAnswers   PageAnswer[]

  @@index([createdAt, formId, participantId])
}

model Session {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [userId])
  token     String    @unique
  expiresAt DateTime
  expiredAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
}

model VerificationToken {
  id        String    @id @default(cuid())
  token     String    @unique
  expiresAt DateTime
  expiredAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [userId])
  userId    String

  @@index([userId, expiresAt, expiredAt])
}

enum FormFieldType {
  BUTTONBLOCK
  TEXTINPUTFIELD
  TEXTAREAFIELD
  SELECTFIELD
  RADIOGROUPFIELD
  CHECKBOXFIELD
  FILEFIELD
}

enum FormTheme {
  LIGHT
  DARK
}
